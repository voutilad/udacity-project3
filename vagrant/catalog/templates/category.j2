{% extends "base.j2" %}
{% block main %}
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-6 centered">
      <h1>
        <div>{{category.name}}</div>
        <div><small>{{category.description}}</small></div>
      </h1>
      {% if items %}
        {% for item in items %}
          <div class="panel panel-default">
            <div class="panel-heading clearfix">
              <h3 class="panel-title pull-left" style="padding-top: 7.5px;">{{item.name}}</h3>
              <div class="btn-group pull-right">
                <form name="deleteItem" method="POST" action="{{url_for('deleteItem', category_id=item.category_id, item_id=item.id)}}">
                  <a href="{{url_for('updateItem', item_id=item.id, category_id=item.category_id)}}" class="btn btn-default btn-small">Edit</a>
                  <button type="submit" class="btn btn-default btn-small">Delete</button>
                </form>
              </div>
            </div>
            <div class="panel-body">
              {{ item.description }}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="alert alert-warning">
          <strong>This category has no items!</strong>
        </div>
      {% endif %}
        <div class="btn-group">
          <a href="{{url_for('deleteCategory', category_id=category.id)}}" class="btn btn-default">Delete Category</a>
          <a href="{{url_for('newItem', category_id=category.id)}}" class="btn btn-default">Add New Item</a>
        </div>
    </div>
    <div class="col-xs-2"></div>
  </div>
{% endblock %}
