{% extends "base.j2" %}
{% block main %}
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-6 centered">
      <h1>{{category.name}}</h1>
      {% if items %}
        {% for item in items %}
          <div class="panel panel-default">
            <div class="panel-heading clearfix">
              <h3 class="panel-title pull-left" style="padding-top: 7.5px;">{{item.name}}</h3>
              <div class="btn-group pull-right">
                <a href="{{url_for('editItem', item_id=item.id)}}" class="btn btn-default btn-small">Edit</a>
                <a href="#" class="btn btn-default btn-small">Delete</a>
              </div>
            </div>
            <div class="panel-body">
              {{ item.description }}
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="alert alert-warning">
          <strong>This category has no items!</strong>
        </div>
        <div class="btn-group">
          <a href="{{url_for('deleteCategory', category_id=category.id)}}" class="btn btn-default">Delete Category</a>
          <a href="#" class="btn btn-default">Add New Item</a>
        </div>
      {% endif %}
    </div>
    <div class="col-xs-2"></div>
  </div>
{% endblock %}
