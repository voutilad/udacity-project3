{% extends "base.j2" %}
{% block main %}
<form name="deleteItem" method="POST"
 action="{{url_for('delete_item', item_id=item.item_id, category_id=item.category_id)}}">
  <div class="panel panel-default row center-block text-center" style="width:60%;">
    <div class="panel-heading">
      <h3 class="panel-title">
        {{ item.name }}
        <img class="pull-right" style="width: 20px; height: auto; border-radius:2px;"
         src="{{creator.picture}}" alt="{{creator.username}}"/>
      </h3>
    </div>
    <div class="panel-body">
      <span class="pull-right glyphicon glyphicon-folder-open"></span>
      <span class="pull-right italic" style="padding-right:8px;">{{category_name}}</span>
      <span>{{ item.description }}</span>
      {% if picture %}
      <img class="pull-left" style="padding-right: 8px;"
       src="{{picture}}" alt="{{item.name}}"/>
      {% else %}
      <img class="pull-left" style="padding-right: 8px;"
       src="http://placehold.it/50x50" alt="Click to add a picture!"></img>
      {% endif %}
      <div class="row center-block text-center" style="padding-top: 20px;">
        <button type="submit" class="btn btn-default">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          Delete
        </button>
        <a class="btn btn-primary"
         href="{{url_for('update_item', item_id=item.item_id, category_id=item.category_id)}}">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          Edit
        </a>
      </div>
    </div>
  </div>
</form>
{% endblock %}
