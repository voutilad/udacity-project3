{% extends "base.j2" %}
{% block main %}
<form id="createItem" method="POST"
 action="{{url_for('new_item', category_id=category_id)}}">
  <div class="panel panel-default row center-block text-center" style="width:60%;">
    <div class="panel-heading">
      <h3 class="panel-title">New Item in {{ category_name }}</h3>
    </div>
    <div class="panel-body">
      <div class="row center-block text-center">
        <fieldset>
          <div class="form-group">
            <div class="input-group center-block" style="width: 45%">
              <input name="name" type="text" class="form-control"
                placeholder="Item Name" aria-describedby="Category Name">
              <input name="description" type="text" class="form-control"
                placeholder="Description" aria-describedby="Description">
              <input name="state" type="hidden" value="{{state}}"/>
            </div>
          </div>
        </fieldset>
      </div>
      <div class="row center-block text-center" style="padding-top: 10px;">
        <a class="btn btn-default"
         href="{{url_for('show_category', category_id=category_id)}}">
          <span class="glyphicon glyphicon-step-backward" aria-hidden="true"></span>
          Cancel
        </a>
        <button type="submit" class="btn btn-primary">
          <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
          Create
        </button>
      </div>
    </div>
  </div>
</form>
{% endblock %}
