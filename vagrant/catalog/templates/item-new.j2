{% extends "base.j2" %}
{% block main %}
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h3>New Item in {{ category_name }}</h3>
      <form id="createCategory" method="POST" action="{{url_for('newItem', category_id=category_id)}}">
        <fieldset>
          <div class="form-group">
            <div class="input-group">
              <input name="name" type="text" class="form-control"
                placeholder="Item Name" aria-describedby="Category Name">
              <input name="description" type="text" class="form-control"
                placeholder="Description" aria-describedby="Description">
            </div>
          </div>
        </fieldset>
        <div class="row">
          <a href="{{url_for('showCategory', category_id=category_id)}}">
            <button type="button" class="btn btn-default">Cancel</button>
          </a>
          <a href="#">
            <button type="submit" class="btn btn-default">Create</button>
          </a>
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
{% endblock %}
