{% extends "base.j2" %}
{% block main %}
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h3>Delete {{category.name}}?</h3>
      <div class="alert alert-warning">
        <strong>
          <div>This category has {{items|length}} item(s).</div>
          <div>Are you sure you want to delete?</div>
        </strong>
      </div>
      <form id="deleteCategory" method="POST"
       action="{{url_for('delete_category', category_id=category.category_id)}}">
        <div class="row">
          <a href="{{url_for('home')}}">
            <button type="button" class="btn btn-default">Cancel</button>
          </a>
          <a href="#">
            <button type="submit" class="btn btn-default">Delete</button>
          </a>
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
{% endblock %}
