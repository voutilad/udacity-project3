{% extends "base.j2" %}
{% block main %}
  <div class="row center-block text-center">
    <div class="panel panel-default pull-left" style="width:49%;">
      <div class="panel-heading">
        <span class="pull-left glyphicon glyphicon-folder-open" style="padding-right:8px;"></span>
        <h3 class="panel-title">Categories</h3>
      </div>
      <div class="panel-body list-group">
      {% if not categories %}
        You have no categories! Why not <a href="{{url_for('new_category')}}">create</a> one?
      {% else %}
        {% for category in categories %}
        <a class="list-group-item" href="{{url_for('show_category', category_id=category.category_id)}}">
          {{category.name}} ({{counts[category.category_id]}})
        </a>
        {% endfor %}
        <div class="row center-block text-center" style="padding-top: 15px;">
          <a class="btn btn-primary" href="{{url_for('new_category')}}">
            <span class="glyphicon glyphicon-plus"></span>
            New Category
          </a>
        </div>
      {% endif %}
      </div>
    </div>
    <div class="panel panel-default pull-right" style="width:49%;">
      <div class="panel-heading">
        <span class="pull-left glyphicon glyphicon-th-large" style="padding-right:8px;"></span>
        <h3 class="panel-title">Your Recent Items</h3>
      </div>
      <div class="panel-body list-group">
      {% if not items %}
        You have no recent items! Maybe trying viewing some?
      {% else %}
        {% for item in items %}
        <a class="list-group-item"
         href="{{url_for('view_item', item_id=item.item_id, category_id=item.category_id)}}">
          {{item.name}} - <small>{{item.category_id}}</small>
        </a>
        {% endfor %}
      {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
